<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Leave a comment</title>
  </head>
  <body>
    <% if @comment.errors.any? %>
      <section id="errors" >
        <h2><%= pluralize(@comment.errors.count, 'error') %> prohibited this comment from being added:</h2>
        <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </section>
    <% end %>
    <%= form_for [@picture, @comment] do |f| %>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
      <%= f.submit 'Post' %>
    <% end %>
  </body>
</html>
